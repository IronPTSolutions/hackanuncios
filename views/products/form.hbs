<h1>Crea tu nuevo anuncio</h1>

<form action="/products" method="post" enctype="multipart/form-data">
  <div class="row">
    <div class="mb-3 col-12 col-md-6">
      <label for="title" class="form-label">Título del anuncio</label>
      <input type="text" class="form-control {{#if errors.title}}is-invalid{{/if}}" id="title" name="title"  value="{{values.title}}" required>
      <div class="invalid-feedback">
        {{errors.title}}
      </div>
    </div>

    <div class="mb-3 col-12 col-md-6">
      <label for="price" class="form-label">Precio</label>
      <input type="number" min="1" step="0.01" class="form-control {{#if errors.price}}is-invalid{{/if}}" id="price" name="price"  value="{{values.price}}" required>
      <div class="invalid-feedback">
        {{errors.price}}
      </div>
    </div>

    <div class="mb-3 col-12 col-md-6">
      <label for="price" class="form-label">Categorias</label>
      <select class="form-select" multiple name="categories" aria-label="Multiple select example">
        {{#each categories as |category|}}
          <option value="{{category}}">{{category}}</option>
        {{/each}}
      </select>
      <div class="invalid-feedback">
        {{errors.price}}
      </div>
    </div>

    <div class="mb-3 col-12">
      <label for="description" class="form-label">Descripción</label>
      <textarea rows="6" class="form-control {{#if errors.title}}is-invalid{{/if}}" id="description" name="description">{{values.description}}</textarea>
      <div class="invalid-feedback">
        {{errors.description}}
      </div>
    </div>

  </div>

  <button class="btn btn-primary">Crear anuncio</button>
</form>